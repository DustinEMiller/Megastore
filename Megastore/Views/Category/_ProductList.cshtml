@using System.Linq
@model Megastore.ViewModels.CategoryList

@Html.Partial("~/Views/Category/_Pager.cshtml", @Model.PagingInfo)

@for (int i = 0; i < @Model.Products.Count(); i += 3) {
    <div class="row">
        @foreach (var product in Model.Products.Skip(i).Take(3)) {
            <div class="col-xs-12 col-sm-12 col-md-4">
                <a href="@product.Url">
                    <img class="img-fluid" src="@product.Image" alt="">
                </a>
                <div><a href="@product.Url">@product.Title</a></div>
                <div>@product.Price</div>
            </div>
        }
    </div>
}
